{
  "name": "revolt-desktop",
  "version": "1.0.0",
  "description": "Revolt desktop app",
  "private": true,
  "author": {
    "name": "Paul Makles",
    "url": "https://insrt.uk",
    "email": "me@insrt.uk"
  },
  "homepage": "https://revolt.chat",
  "main": "bundle/main.js",
  "scripts": {
    "build:bundle": "tsc",
    "watch:bundle": "tsc-watch",
    "start": "electron .",
    "build": "electron-builder -mwl",
    "release": "dotenv -e .env electron-builder --publish always",
    "build:linux:unpacked": "electron-builder -l dir",
    "build:linux:pacman": "electron-builder -l pacman",
    "build:linux:appimage": "electron-builder -l AppImage",
    "build:windows:appx": "electron-builder -w appx",
    "test:linux:appimage": "dist/revolt-desktop-1.0.0.AppImage",
    "clean": "rimraf dist"
  },
  "repository": "revoltchat/desktop",
  "devDependencies": {
    "@types/auto-launch": "^5.0.2",
    "dotenv-cli": "^4.0.0",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  },
  "build": {
    "appId": "chat.revolt.app",
    "artifactName": "revolt-desktop-${version}",
    "productName": "Revolt",
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "category": "Network"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "appx": {
      "displayName": "Revolt Chat",
      "applicationId": "revolt.chat",
      "identityName": "40345RevoltCommunications.revolt.chat",
      "publisher": "CN=B040CC7E-0016-4AF5-957F-F8977A6CFA3B",
      "publisherDisplayName": "Revolt Communications"
    },
    "publish": {
      "provider": "github"
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-store": "^8.0.0",
    "electron-window-state": "^5.0.3",
    "electron-winstore-auto-launch": "^2.0.6"
  }
}
